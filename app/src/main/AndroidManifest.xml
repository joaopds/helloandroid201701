<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.usj.helloandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SaudacaoActivity"/>
        <activity android:name=".Saudacao2Activity">
            <intent-filter>
                <action android:name="helloandroid.saudacao2.acao_nome" />
                <category android:name="helloandroid.saudacao2.categoria_nome" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
